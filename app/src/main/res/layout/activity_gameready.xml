<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="270dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/gameReady_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/gameReadyStart"
        android:textSize="@dimen/gameStartTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/gameReady_button_ability1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/abilityDashName" />

        <Button
            android:id="@+id/gameReady_button_ability2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/abilityHidingName" />

        <Button
            android:id="@+id/gameReady_button_ability3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/abilityShadowName" />

        <Button
            android:id="@+id/gameReady_button_ability4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/abilityShockWaveName" />

    </LinearLayout>


</LinearLayout>