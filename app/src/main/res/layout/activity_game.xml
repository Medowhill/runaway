<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <com.medowhill.jaemin.runaway.view.GameView
        android:id="@+id/game_gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.medowhill.jaemin.runaway.view.DirectionControl
        android:id="@+id/game_directionControl"
        android:layout_width="@dimen/directionControlSize"
        android:layout_height="@dimen/directionControlSize"
        android:layout_gravity="left|bottom" />

</FrameLayout>
